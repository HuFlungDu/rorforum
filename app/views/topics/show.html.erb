<div class="topic-toolbar">
	<div class="topic-data">
		<div class="topic-forum"><%= link_to @topic.forum.name, forum_path(@topic.forum.forum_nav_id) %></div>
		<div class="topic-name"><%= @topic.name %></div> 
	 </div>
	<% if power_level?(@forum.required_power_level_to_post) and signed_in? %>
		<div class="topic-commands">
			<div class="reply"><%= link_to "Reply", reply_path(:topic => @topic)%></div>
		</div>
	<% end %>
</div>
<%= will_paginate @posts%>
